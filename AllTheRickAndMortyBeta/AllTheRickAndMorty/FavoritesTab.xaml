<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             NavigationPage.HasNavigationBar="True"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AllTheRickAndMorty.FavoritesTab">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#fff9b7">
            <StackLayout Orientation="Horizontal">
            <Button x:Name="characterButton" Text="Favorite Characters" BackgroundColor="#fff9b7" HorizontalOptions="StartAndExpand" Margin="10,0,0,0" TextColor="#62a4ab"/>
            <Button x:Name="episodeButton" Text="Favorite Episodes" BackgroundColor="#fff9b7" HorizontalOptions="EndAndExpand" Margin="0,0,10,0" TextColor="#62a4ab"/>
            </StackLayout>
            <ListView x:Name="listView">
    <ListView.ItemTemplate>
        <DataTemplate>
            <ImageCell Text="" Detail="" />
        </DataTemplate>
    </ListView.ItemTemplate>
</ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
